with "../shared";
with "../gwiad/gwiad";
with "../plugins/services/gwiad-plugins-services";
with "../plugins/websites/gwiad-plugins-websites";

project Gwiad.Dynamic_Libraries is

   for Source_Dirs use ("src");
   for Library_Name use "gwiad_dynamiclib";
   for Library_Kind use "dynamic";

   case Shared.Build is
      when "Debug" =>
         for Object_Dir use "../.build/debug/obj";
         for Library_Dir use "../.build/debug/lib";
      when "Profile" =>
         for Object_Dir use "../.build/profile/obj";
         for Library_Dir use "../.build/profile/lib";
         for Library_Options use Project'Library_Options & ("-fprofile-arcs");
      when "Release" =>
         for Object_Dir use "../.build/release/obj";
         for Library_Dir use "../.build/release/lib";
   end case;

   case Shared.OS is
      when "Windows_NT" =>
         for Library_Options use ("-laws", "-laws_include", "-lwsock32");
      when others =>
         null;
   end case;

   -------------
   -- Builder --
   -------------

   package Builder renames Shared.Builder;

   --------------
   -- Compiler --
   --------------

   package Compiler renames Shared.Compiler;

   ---------
   -- Ide --
   ---------

   package Ide renames Shared.Ide;

   ------------
   -- Naming --
   ------------

   package Naming is
      case Shared.OS is
         when "Windows_NT" =>
            for Implementation ("Gwiad.Dynamic_Libraries")
              use "gwiad-dynamic_libraries__win32.adb";
         when others =>
            for Implementation ("Gwiad.Dynamic_Libraries")
              use "gwiad-dynamic_libraries__unix.adb";
      end case;
   end Naming;

end Gwiad.Dynamic_Libraries;
